{
  "name": "perishable-inventory-ecommerce",
  "description": "Persisted API Service to manage perishable items storage and sales",
  "website": "https://github.com/snoseeds/perishable-inventory-ecommerce",
  "repository": "https://github.com/snoseeds/perishable-inventory-ecommerce",
  "logo": "",
  "success_url": "/",
  "scripts":{
    "postdeploy": "./src/scripts/start.sh"
  },
  "env": {
    "MODE": {
      "description": "Environment [PROD/DEV/TEST]",
      "value": "PROD"
    },
    "NODE_ENV": {
      "description": "Environment",
      "value": "production"
    },
    "EXPIRED_ITEMS_LOG_DIR": {
      "description": "logging disposal of expired items",
      "value": "expired_items_archival_log"
    },
    "RUN_MIGRATIONS": {
      "description": "should be true for production",
      "value": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "image": "heroku/nodejs",
  "addons": ["heroku-postgresql"],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}